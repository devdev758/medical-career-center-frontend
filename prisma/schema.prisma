datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  JOB_SEEKER
  EMPLOYER
  ADMIN
}

model User {
  id              String           @id @default(cuid())
  name            String?
  email           String?          @unique
  emailVerified   DateTime?
  image           String?
  password        String?
  role            UserRole         @default(JOB_SEEKER)
  companyId       String?
  company         Company?         @relation(fields: [companyId], references: [id])
  accounts        Account[]
  sessions        Session[]
  applications    Application[]
  savedJobs       SavedJob[]
  profile         Profile?
  workExperience  WorkExperience[]
  education       Education[]
  skills          Skill[]
  certifications  Certification[]
  licenses        License[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo        String?
  website     String?
  description String?  @db.Text
  location    String?
  industry    String?
  size        String?
  founded     String?
  verified    Boolean  @default(false)
  jobs        Job[]
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id   String @id @default(cuid())
  name String @unique
  slug String @unique
  icon String?
  jobs Job[]
}

model Job {
  id              String        @id @default(cuid())
  title           String
  slug            String        @unique
  description     String        @db.Text
  location        String?
  type            String        @default("FULL_TIME")
  salary          String?
  remote          Boolean       @default(false)
  experienceLevel String        @default("MID")
  
  // Internal vs External
  source          String        @default("INTERNAL") // INTERNAL, INDEED, ZIPRECRUITER
  externalId      String?
  externalUrl     String?
  
  // Company Info (Optional for External)
  companyId       String?
  companyName     String?       // For external jobs
  companyLogo     String?       // For external jobs
  
  // pSEO Linking
  careerKeyword   String?
  
  categoryId      String?
  company         Company?      @relation(fields: [companyId], references: [id])
  category        Category?     @relation(fields: [categoryId], references: [id])
  applications    Application[]
  savedBy         SavedJob[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([source, externalId])
  @@index([careerKeyword])
  @@index([location])
}

model SavedJob {
  id      String   @id @default(cuid())
  userId  String
  jobId   String
  user    User     @relation(fields: [userId], references: [id])
  job     Job      @relation(fields: [jobId], references: [id])
  savedAt DateTime @default(now())

  @@unique([userId, jobId])
}

model Application {
  id          String   @id @default(cuid())
  jobId       String
  userId      String
  status      String   @default("PENDING")
  phone       String?
  resumeUrl   String?
  coverLetter String?  @db.Text
  notes       String?  @db.Text
  job         Job      @relation(fields: [jobId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  appliedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([jobId, userId])
}

model Profile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Personal Information
  firstName   String?
  middleName  String?
  lastName    String?
  dateOfBirth DateTime?
  gender      String?
  address     String?
  address2    String?
  city        String?
  state       String?
  zipCode     String?
  country     String?   @default("United States")

  // Professional Information
  headline          String?
  bio               String? @db.Text
  phone             String?
  location          String?
  website           String?
  linkedIn          String?
  specialization    String?
  yearsOfExperience Int?

  // Resume
  resumeUrl      String?
  resumeFileName String?

  // Job Preferences
  jobTypes          String[]
  desiredSalary     String?
  willingToRelocate Boolean  @default(false)
  availableFrom     DateTime?

  // Metadata
  profileComplete Int     @default(0)
  isPublic        Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkExperience {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  company     String
  location    String?
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Education {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  institution  String
  degree       String
  fieldOfStudy String?
  startDate    DateTime
  endDate      DateTime?
  isCurrent    Boolean   @default(false)
  grade        String?
  description  String?   @db.Text
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
}

model Skill {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name              String
  level             String?
  yearsOfExperience Int?
  createdAt         DateTime @default(now())

  @@index([userId])
}

model License {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  licenseType   String    // e.g., "RN", "LPN", "MD", "NP"
  licenseNumber String
  state         String
  issueDate     DateTime
  expiryDate    DateTime?
  status        String    @default("ACTIVE") // ACTIVE, EXPIRED, SUSPENDED
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

model Certification {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  issuingOrg    String
  issueDate     DateTime
  expiryDate    DateTime?
  credentialId  String?
  credentialUrl String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

// Programmatic SEO Models

model Location {
  id        String   @id @default(cuid())
  city      String
  state     String   // e.g., "CA"
  stateName String   // e.g., "California"
  zip       String?
  slug      String   // e.g., "los-angeles-ca"
  
  // Relations
  salaries  SalaryData[]
  // jobs      Job[]    // Future proofing for Phase 8

  @@unique([city, state])
  @@index([state])
  @@index([slug])
}

model SalaryData {
  id              String   @id @default(cuid())
  
  careerKeyword   String   // e.g., "ultrasound-technician"
  
  locationId      String?
  location        Location? @relation(fields: [locationId], references: [id])
  
  // BLS Data Points
  hourly10th      Float?
  hourly25th      Float?
  hourlyMedian    Float?
  hourly75th      Float?
  hourly90th      Float?
  
  annual10th      Float?
  annual25th      Float?
  annualMedian    Float?
  annual75th      Float?
  annual90th      Float?
  
  employmentCount Int?     // Number of jobs in this area
  
  year            Int      // Data year (e.g., 2024)
  source          String   // "BLS"
  
  updatedAt       DateTime @updatedAt

  @@unique([careerKeyword, locationId, year])
  @@index([careerKeyword])
}

model CareerGuide {
  id                String   @id @default(cuid())
  professionSlug    String   @unique
  professionName    String
  
  // Overview Section
  overview          String   @db.Text
  keyStats          Json     // { jobGrowth, medianSalary, jobOpenings, totalEmployed }
  
  // What Does [Profession] Do? Section
  rolesDescription  String   @db.Text
  dailyTasks        Json     // Array of strings: daily responsibilities
  specializations   Json     // Array of objects: { name, description }
  workEnvironments  Json     // Array of strings: hospitals, clinics, etc.
  
  // Salary Information Section
  salaryOverview    String   @db.Text
  nationalAverage   String?
  topPayingStates   Json     // Array of objects: { state, salary }
  entryLevelRange   String?
  experiencedRange  String?
  benefits          Json     // Array of strings: common benefits
  
  // Education & Certification Section
  educationPath     String   @db.Text
  requiredDegrees   Json     // Array of objects: { degree, description }
  certifications    Json     // Array of objects: { name, issuer, description }
  timeline          String?  // e.g., "2-4 years"
  accreditedPrograms String? @db.Text
  
  // Skills Section
  technicalSkills   Json     // Array of strings
  softSkills        Json     // Array of strings
  technologies      Json     // Array of strings: tools, software, equipment
  
  // Job Outlook Section
  growthRate        String?  // e.g., "15% (Much faster than average)"
  projections       String   @db.Text
  emergingSpecializations Json // Array of strings
  careerLadder      Json     // Array of objects: { level, title, description }
  
  // Schools & Programs Section
  schoolsOverview   String   @db.Text
  topSchools        Json     // Array of objects: { name, location, programType }
  programTypes      Json     // Array of objects: { type, description }
  financialAid      String?  @db.Text
  
  // Licensing by State Section
  licensingOverview String   @db.Text
  stateRequirements Json     // Object: { [state]: { required, details } }
  examInfo          Json     // Array of objects: { examName, description }
  renewalProcess    String?  @db.Text
  
  // Current Job Opportunities Section
  jobMarketOverview String   @db.Text
  featuredEmployers Json     // Array of strings: employer names
  
  // Interview & Resume Tips Section
  interviewTips     String   @db.Text
  resumeKeywords    Json     // Array of strings
  portfolioTips     String?  @db.Text
  
  // SEO & Meta
  metaTitle         String?
  metaDescription   String?
  slug              String?  // For /how-to-become-[profession]
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  published         Boolean  @default(false)
  
  @@index([professionSlug])
  @@index([published])
}
